@import nib

body
  background-color #DDD

.svgicon
  height 50px
  width 50px
  perspective 500px

.play
  fill lime
  stroke darken(lime, 25%)
  stroke-width 2px

#record
  fill red
  stroke black
  stroke-width 2px

#head
  fill black

#shoulders
  fill black

#screen
  fill white
  stroke silver
  stroke-width 3px

#keyboard
  fill silver
  transform rotateX(50deg)
