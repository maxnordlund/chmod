extends layout

append scripts
  script(src="/javascript/gitarr.js")

mixin range(label, name, min, max, step)
  label(id="#{name}")= label
    input(type="range", min="#{min}", max="#{max}", step="#{step}")
    output

block content
  audio#gitarr
  form
    +range("Frekvens", "frequency", 200, 880, 10)
    +range("Mix", "mix", 0, 1, 0.01)
    +range("Room size", "roomSize", 0, 1, 0.01)
    +range("Damping", "damping", 0, 1, 0.01)
    input(type="button", id="play", value="Spela")
